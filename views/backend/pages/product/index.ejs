<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/formvalidation/formValidation.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/dropify/dropify.min.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.min.css">') %>
<div class="row">
    <div class="col-lg-1 grid-margin stretch-card"></div>
    <div class="col-lg-10 grid-margin stretch-card">
    <div class="col-lg-9">
        <%if(productObj.length==0){%>
            <div class="row">
                <div class="col-2"></div>
                <div class="col-8">
                    <div class="empty">
                        <h2>Không tìm thấy sản phẩm nào</h2>
                        <br>
                        <h5 class="text-secondary">Xin lỗi, chúng tôi không thể tìm được kết quả hợp với tìm kiếm của bạn</h5>
                        <br>
                        <br>
                        <br>
                        <img src="/images/search.png">
                    </div>
                   
                </div>
                <div class="col-2"></div>
            </div>
            
        <%} else{%>
            <div class="row">
                <%for(product of productObj){%>
                <div class="col-md-3 col-xl-3 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body border-bottom">
                            <div class="row">             
                                <div class="col-12">
                                    <img width="150px" height="100px" class="mx-auto d-block img-thumbnail" src=<%=product.img%>>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center justify-content-between mb-3">
                            <div>
                                <p><%= product.title%></p>
                                <h4 class="mb-0 text-danger"><%= product.price%> đ</h2>
                            </div>
                            <a href="/product/<%=product.id%>">
                                <div class="icon-box-primary icon-box-md">
                                <i class="mdi mdi-cart"></i>
                                </div>
                            </a>
                            </div>
                        </div>
                    </div>
                </div>
                <%}%>
            </div>
        <%}%>
    </div>
    <div class="col-lg-3">
        <div class="list-group">
           
            <%for(productType of productTypeObj){%>
            <a href="/<%=productType.id%>" class="list-group-item list-group-item-action"><%=productType.title%></a>
            <%}%>
        </div>
    </div>

    </div>
</div>
<% block('localScripts', '<script src="/vendors/select2/select2.full.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/formValidation.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/framework/bootstrap4.min.js"></script>') %>
<% block('localScripts', '<script src="/js/backend/product/index.js"></script>') %>
<% block('localScripts', '<script src="/vendors/sweetalert/sweetalert.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/select2/select2.js"></script>') %>