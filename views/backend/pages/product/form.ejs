<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/formvalidation/formValidation.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/dropify/dropify.min.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.min.css">') %>
<div class="row">
    <div class="col-1"></div>
    <div class="col-10">
        <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-5">
                    <img width="250px" class="mx-auto d-block img-thumbnail" src=<%=productObj.img%>>
                </div>
                <div class="col-7">
                    <div class="card-title">
                      <%=productObj.title%>
                    </div>
                    <p class="card-description"><%=productObj.description%></p>
                    <h1 class="display-3 text-danger">
                        <%=productObj.price%> đ
                    </h1>
                    <ul class="list-ticked">
                      <li>Thương hiệu: <%=productObj.brand.title%>
                        <p class="mb-0 text-muted">
                          <%=productObj.brand.description%>                              
                        </p>
                      </li>
                      <li>Loại sản phẩm: <%=productObj.productType.title%>
                        <p class="mb-0 text-muted">
                          <%=productObj.productType.description%>                            
                        </p>
                      </li>
                      <li>Đánh giá trung bình: 
                          <%if(rateAvg!=0) {%>
                            <%=rateAvg%><i class="mdi mdi-star text-warning"></i>
                            <%}else{%>
                              Chưa có đánh giá
                            <%}%>
                      </li>
                      
                    </ul>        
                </div>
              </div>
              <div class="alert d-none" style="text-align:center" role="alert">
                  <i class="mdi mdi-alert-circle"></i>
              </div>
              <div class="modal-footer row-button-fluid">
                <a class="btn btn-light"  href="/">Trở về</a>
                <button id="cart" name="cart" class="btn btn-primary cart-row" data-id=<%=productObj.id%>>Thêm vào giỏ hàng</button>
              </div>
            </div>
          </div>
    </div>
     
      <div class="col-1"></div>
  
</div>
<% block('localScripts', '<script src="/vendors/select2/select2.full.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/formValidation.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/framework/bootstrap4.min.js"></script>') %>
