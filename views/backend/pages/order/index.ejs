<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/formvalidation/formValidation.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/dropify/dropify.min.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.min.css">') %>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-1 grid-margin stretch-card"></div>
            <div class="col-lg-10 grid-margin stretch-card">
                <div class="col-lg-12">
                    <% _.each(orders, function (order, index) { %>
                        <div class="row">
                            <div class="col-md-12 grid-margin stretch-card">
                              <div class="card">
                                <div class="card-body border-bottom">
                                    <h5>Đơn hàng <a href="/order/detail/<%=order.id%>"><%=order.id%></a></h5> 
                                    <h6 class="text-secondary">Đặt ngày <%=order.orderDate%></h6>
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <tbody>
                                            <% _.each(order.informationReceived.cart.items, function (item, index) { %>
                                            <tr>
                                                <td> <%= item.product.title %> </td>
                                                <td> Số lượng: <%= item.qty %></td>
                                                <%if(order.status == 1) {%>
                                                    <td class="badge badge-success badge-pill"> Đang giao hàng</td>
                                                <% }else if(order.status == 2) {%>
                                                    <td class="badge badge-light badge-pill"> Đã giao hàng</td>
                                                <% } else{%>
                                                    <td class="badge badge-warning badge-pill"> Đang chờ xác nhận </td>
                                                <% } %>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                              </div>
                            </div> 
                        </div>
                    <% }) %>
                </div>
            </div>
            <div class="col-lg-1 grid-margin stretch-card"></div>
        </div>
    </div>
</div>



<% block('localScripts', '<script src="/vendors/select2/select2.full.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/formValidation.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/framework/bootstrap4.min.js"></script>') %>
<% block('localScripts', '<script src="/js/backend/cart/index.js"></script>') %>
<% block('localScripts', '<script src="/vendors/sweetalert/sweetalert.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/select2/select2.js"></script>') %></div>