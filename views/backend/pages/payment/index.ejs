<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/formvalidation/formValidation.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/dropify/dropify.min.css">') %>
<% block('localCss', '<link rel="stylesheet" href="/vendors/select2/select2.min.css">') %>
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-1 grid-margin stretch-card"></div>
            <div class="col-lg-10 grid-margin stretch-card">
              <div class="col-lg-9">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Chọn hình thức giao hàng</h4>
                    <div class="row">
                      <div class="col-lg-12 col-xlg-12 col-md-12">
                        <div class="form-group">
                          <label class="form-control-label">
                              <%= __('Họ và tên') %>
                          </label>
                          <input value="<%= profile?profile.firstName:'' %>" type="text" class="form-control"
                              name="firstName"  />
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">
                                <%= __('Số điện thoại') %>
                            </label>
                            <input value="<%= profile?profile.phone:'' %>" type="number" class="form-control"
                                data-fv-notempty="true" data-fv-notempty-message="<%= __('Số điện thoại không được để trống') %>"
                                data-fv-message="<%= __('Số điện thoại phải gồm 10 hoặc 11 chữ số') %>"
                                name="phone" pattern="[0-9]{10,11}$"  />
                        </div>
                        <div class="form-group">
                            <label class="form-control-label">
                                <%= __('Địa chỉ') %>
                            </label>
                            <textarea type="text" class="form-control"
                                name="address"><%= profile?profile.address:'' %></textarea>
                        </div>
                      </div>
                  </div>
                </div>
                <div class="modal-footer row-button-fluid">
                  <a href="/payment" class="btn btn-primary cart-row">Giao đến địa chỉ này</a>
                </div>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="row">
                  <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body border-bottom">
                          <div class="row">
                              <div class="col-md-9">
                                  <h6 class="text-secondary">Địa chỉ giao hàng</h6>
                              </div>
                              <div class="col-md-3">
                                  <button>Sửa</button>
                              </div>
                              
                          </div>
                      </div>
                      <div class="card-body">
                        <h4>Phan Chí Cường</h4>
                        <h6 class="text-secondary">116 Nguyễn Trọng Kỷ</h6>
                        <h6 class="text-secondary">Điện thoại: 0935781225</h6>
                      </div>
                    </div>
                  </div> 
                </div>
                <div class="row">
                  <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                      <div class="card-body border-bottom">
                          <div class="row">
                              <div class="col-md-9">
                                  <h6 class="text-secondary">Đơn hàng(2 sản phẩm)</h6>
                              </div>
                              <div class="col-md-3">
                                  <button>Sửa</button>
                              </div>
                              
                          </div>
                      </div>
                      <div class="card-body">
                        <h4>Phan Chí Cường</h4>
                        <h6 class="text-secondary">116 Nguyễn Trọng Kỷ</h6>
                        <h6 class="text-secondary">Điện thoại: 0935781225</h6>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
        </div>
    </div>
</div>
<% block('localScripts', '<script src="/vendors/select2/select2.full.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/formValidation.min.js"></script>') %>
<% block('localScripts', '<script src="/vendors/formvalidation/framework/bootstrap4.min.js"></script>') %>
