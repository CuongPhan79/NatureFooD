<div class="col-lg-12">
    <div class="row">
            <form autocomplete="off" id="formProfile" class="" data-fv-framework="bootstrap4"
                data-fv-message="<%= __('Giá trị nhập vào không hợp lệ') %>" data-fv-icon-valid="glyphicon glyphicon-ok"
                data-fv-icon-invalid="glyphicon glyphicon-remove" data-fv-icon-validating="glyphicon glyphicon-refresh"
                data-fv-live="enabled" data-id="<%- profile ? profile.id : '' -%>">
                <div class="card">
                    <div class="card-body">
                        <div class="card-title">Thông tin cá nhân</div>
                        <div class="row">
                            <div class="col-lg-6 col-xlg-6 col-md-6">
                                <div class="form-group">
                                        <label class="form-control-label">
                                            <%= __('Họ') %>
                                        </label>
                                        <input value="<%= profile?profile.firstName:'' %>" type="text" class="form-control"
                                            name="firstName" />
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">
                                        <%= __('Địa chỉ Email') %>
                                    </label>
                                    <input value="<%= profile?profile.emailAddress:'' %>" type="text" class="form-control"
                                        data-fv-notempty="true" data-fv-notempty-message="<%= __('Email không được để trống') %>"
                                        data-fv-message="<%= __('Định dạng email không hợp lệ') %>"
                                        name="emailAddress" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" readonly/>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">
                                        <%= __('Số điện thoại') %>
                                    </label>
                                    <input value="<%= profile?profile.phone:'' %>" type="number" class="form-control"
                                        data-fv-notempty="true" data-fv-notempty-message="<%= __('Số điện thoại không được để trống') %>"
                                        data-fv-message="<%= __('Số điện thoại phải gồm 10 hoặc 11 chữ số') %>"
                                        name="phone" pattern="[0-9]{10,11}$" />
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">
                                        <%= __('Địa chỉ') %>
                                    </label>
                                    <input value="<%= profile?profile.address:'' %>"  class="form-control" name="address"
                                        data-fv-notempty="true" data-fv-notempty-message="<%= __('Địa không được để trống') %>" />
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">
                                        <%= __('Nhập lại mật khẩu') %>
                                    </label>
                                    <input type="password" class="form-control" name="passwordConfirm" id="confirm_password" />
                                </div>  
                               
                            </div>
                            <div class="col-lg-6 col-xlg-6 col-md-6">
                                <div class="form-group">
                                    <label class="form-control-label">
                                        <%= __('Tên') %>
                                    </label>
                                    <input value="<%= profile?profile.lastName:'' %>" type="text" class="form-control"
                                        name="lastName"/>
                                </div>
                                <div class="form-group">
                                    <label for="birthday" class="form-control-label">Ngày sinh</label>
                                    <input value="<%= profile?profile.birthday:'' %>" type="date" id="birthday"
                                        class="form-control" name="birthday"/>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">
                                        Giới tính
                                    </label>
                                    <ul class="list-unstyled list-inline">
                                        <li class="list-inline-item">
                                        <div class="form-check">
                                            <label class="form-check-label">
                                            <input type="radio" id="male" class="form-check-input" name="gender" value="1"
                                                <%= (profile.gender == 1 ? 'checked' : '') %> checked />
                                            <i class="input-helper"></i>
                                            Nam
                                            </label>
                                        </div>
                                        </li>
                                        <li class="list-inline-item">
                                        <div class="form-check">
                                            <div class="form-check-label">
                                            <input type="radio" id="female" name="gender" class="form-check-input" value="0"
                                                <%= (profile.gender == 0 ? 'checked' : '') %> />
                                            <i class="input-helper"></i>
                                            Nữ
                                            </label>
                                            </div>
                                        </div>
                                        </li>
                                    </ul>
                                </div>
                                <div class="form-group">
                                    <label class="form-control-label">
                                        <%= __('Mật khẩu') %>
                                    </label>
                                    <input type="password" class="form-control" name="password" id="password"
                                        data-fv-message="<%= __('Mật khẩu phải dài ít nhất 6 kí tự và bao gồm số, chữ in hoa, chữ in thường.') %>"
                                        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" />
                                </div>
                               
                               
                            </div>
                        </div>
                        <div class="alert d-none" style="text-align:center" role="alert">
                            <i class="mdi mdi-alert-circle"></i>
                        </div>
                        <div class="modal-footer row-button-fluid">
                            <a href="/" class="btn btn-default btn-outline btn-reset-page-account waves-effect waves-classic">
                                <%= __('Trang chủ') %>
                            </a>
                            <button id="btnFormProfile" type="submit" class="btn btn-primary waves-effect waves-classic">
                                <%= __('Cập nhật') %>
                            </button>
                        </div>
                    </div>
                </div>
            </form>
    </div>
</div>

